doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Sign Up
  link(rel='stylesheet', href='../bootstrap-5.3.3-dist/css/bootstrap.min.css')
  link(rel='stylesheet', href='/main.css/reg.css')
.form-container
  h1 Sign Up
  form(#form.form method = "POST" action="/addUser" )
    label(for='FirstName') First Name
    input#username(type='text', name='firstname', required='')
    br
    label(for='lastName') Last Name
    input#username(type='text', name='lastname', required='')
    br
    label(for='email') Email
    input#email(type='email', name='email', required='')
    br
    label(for='Phonenumber') Phone number
    input#phonenumber(type='number', name='phonenumber', required='')
    br
    label(for='roles') Roles
    select#roles(name='role')
      option(value='') select role
      option(value='manager') Manager
      option(value='salesagent') Sales Agent
    br
    label(for='Gender') Gender
    select#gender(name='Gender')
      option(value='') select Gender
      option(value='female') Female
      option(value='male') Male
    br
    label(for='Gender') Branch
    select#branch(name='branch')
      option(value='') select branch
      option(value='matugga') matugga
      option(value='maganjo') maganjo
    br
    
    label(for='password')  Password
    input#password(type='password', name='password', required='')
    br
    label(for=' confirmpassword') confirm password
    input#confirmpassword(type='password', name='confirmpassword', required='')
    br
    button#submit(type='submit') Submit
script(src='/main.js/regex.js')
script(src='../bootstrap-5.3.3-dist/js/bootstrap.bundle.js')
